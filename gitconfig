[user]
	name = Sergio Aristizábal Gómez
	email = serargz@gmail.com

[alias]
  st = status
  co = checkout
  br = branch
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --no-merges
  create-branch = checkout -b
  show-file = "!f() { git show ${2-origin/master}:$1; }; f"
  file-history = "!f() { git log -p ${2-origin/master} -- $1; }; f"
  fo = fetch
  authy-push = "!f() { AUTHY_TOKEN=$(read -p \"Token: \") git push $* }; f"

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[core]
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  editor = /usr/bin/vim

[github]
  user = serargz

[help]
  autocorrect = 1
